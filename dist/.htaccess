# Disable MultiViews (prevents weird conflicts)
Options -MultiViews

<IfModule mod_rewrite.c>
  RewriteEngine On

  # If request is not a real file or directory, serve index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [QSA,L]
</IfModule>
